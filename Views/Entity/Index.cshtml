@model IEnumerable<XMLParser.Models.Entity>

@{
    ViewBag.Title = "Entities";
}

@if (ViewBag.Success != null)
{
    <div class="alert alert-dismissible alert-success">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <p>
            <strong>Well done! </strong>
            You successfully created new entity.
        </p>
    </div>
}

<div class="jumbotron">
    <h1 class="display-3">DbElixir</h1>
    <p class="lead">A magical tool that transform XML into database entities</p>
    <hr class="my-4">
    <p class="lead">
        <a class="btn btn-primary btn-lg" href="@Url.Action("Documentation", "Entity")" role="button" data-pjax>Learn more</a>
    </p>
</div>

<div class="row">
    <h2 class="col-md-6 col-xs-12">
        Entities
    </h2>

    <div class="col-md-6 col-xs-12">
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary float-right", @role = "button", data_pjax = "" })

        <div id="search-entity" class="form-group float-right mr-2">
            <label for="search-input" class="search-label">
                <span class="fa fa-fw fa-search" aria-hidden="true"></span>
                <span class="visually-hidden">Search</span>
            </label>
            <input type="search" id="search-entities" name="search-entities" class="form-control search-input" placeholder="Search" />
        </div>
    </div>
</div>

<div id="entity-group" class="row">
    @Html.Partial("List")
</div>

<div class="modal fade" id="rename-entity-modal" tabindex="-1" role="dialog" aria-labelledby="modal-label" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modal-label">Rename entity</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <label for="entity-name">Name</label>
                <input type="text" id="entity-name" name="entity-name" class="form-control"/>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" data-action="rename-entity" data-entity="">Save changes</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="delete-entity-modal" tabindex="-1" role="dialog" aria-labelledby="modal-label" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modal-label">Delete entity</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this entity?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" data-action="delete-entity" data-entity="">Delete</button>
            </div>
        </div>
    </div>
</div>
